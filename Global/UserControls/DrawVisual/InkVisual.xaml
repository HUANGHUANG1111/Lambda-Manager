<UserControl x:Class="Global.UserControls.DrawVisual.InkVisual"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:draw="clr-namespace:Global"
             xmlns:local="clr-namespace:Global.UserControls.DrawVisual"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <InkCanvas
            EditingMode="None" UseCustomCursor="True" Background="Transparent" x:Name="inkCanvas" MouseLeftButtonDown="inkCanvas_MouseLeftButtonDown" MouseLeftButtonUp="inkCanvas_MouseLeftButtonUp" MouseMove="inkCanvas_MouseMove" MouseWheel="inkCanvas_MouseWheel"  PreviewKeyDown="inkCanvas_PreviewKeyDown" SizeChanged="inkCanvas_SizeChanged" ></InkCanvas>
    </Grid>
   
</UserControl>
