<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:ConfigDPCMode">
  <Style x:Key="{x:Type local:DPCMode}" TargetType="{x:Type local:DPCMode}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:DPCMode}">
          <Viewbox Margin="2">
                        <GroupBox Header="模式选择" Margin="2" Background="#EEEEF2">
              <StackPanel Orientation="Horizontal">
                <ToggleButton Name="Button1" Content="明场" Margin="5 0" Width="70" />
                <ToggleButton Name="Button2" Content="暗场" Margin="5 0" Width="70" />
                <ToggleButton Name="Button3" Content="像衬" Margin="5 0" Width="70" />
                <ToggleButton Name="Button4" Content="浮雕" Margin="5 0" Width="70" />
              </StackPanel>
                        </GroupBox>
          </Viewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>