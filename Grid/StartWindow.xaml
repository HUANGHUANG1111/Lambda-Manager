<Window x:Class="Grid.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grid"
        mc:Ignorable="d"
        Title="StartWindow"  Height="100" Width="800" BorderThickness="0" WindowStyle="None" Initialized="Window_Initialized">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1 64 1 1"  UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <ProgressBar IsIndeterminate="True" Background="Black"  />
        <Label x:Name="StartLabel" Content="软件加载中" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center" FontSize="40"/>
    </Grid>
</Window>
