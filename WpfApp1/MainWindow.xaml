<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="300">
    <Window.Resources>
        <Geometry x:Key="DownArrow">M 0,0 L 3.5,4 L 7,0 Z</Geometry>
        <Geometry x:Key="UpArrow">M 0,4 L 3.5,0 L 7,4 Z</Geometry>
        <Geometry x:Key="RightArrow">M 0,0 L 4,3.5 L 0,7 Z</Geometry>
    </Window.Resources>
    <Grid>
        <Border Background="#595959">
            <ScrollViewer  ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <StackPanel>
                    <StackPanel >
                        <Button Click="Button_Click">
                            <Button.Template>
                                <ControlTemplate>
                                    <DockPanel>

                                        <Path Margin="5,2,5,2" Height="15" Stretch="Fill" Width="16"  Fill="Azure" Data="{StaticResource DownArrow}" >

                                        </Path>
                                        <Label Content="模式选择" FontSize="20" />
                                    </DockPanel>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <StackPanel Margin="15,0,0,0">
                            <DockPanel HorizontalAlignment="Left">

                                <RadioButton  Style="{StaticResource ButtonStyle1}" Content="明场"  BorderThickness="0" Background="Transparent" FontSize="18" Foreground="White"  Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked"  Click="Button_Click" Tag="0" Margin="5,0"/>
                                <RadioButton  Style="{StaticResource ButtonStyle1}" Content="暗场"  BorderThickness="0" Background="Transparent" FontSize="20" Foreground="White" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked" Click="Button_Click" Tag="1" Margin="5,0" />
                                <RadioButton  Style="{StaticResource ButtonStyle1}" Content="相衬" BorderThickness="0" Background="Transparent" FontSize="20" Foreground="White" Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked" Click="Button_Click" Tag="2" Margin="5,0"/>
                                <RadioButton  Style="{StaticResource ButtonStyle1}" Content="浮雕"  BorderThickness="0" Background="Transparent" FontSize="20" Foreground="White "  Checked="ToggleButton_Checked" Unchecked="ToggleButton_Unchecked" Click="Button_Click" Tag="3" Margin="5,0"/>

                            </DockPanel>

                            <Grid x:Name="Grid2"  Visibility="Visible">
                                <Grid.ColumnDefinitions >
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="外半径" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Slider Grid.Column="1" x:Name="slider2" Minimum="0" VerticalAlignment="Center" Maximum="15" IsSnapToTickEnabled="True" Value="10" TickFrequency="1" ValueChanged="Slider_ValueChanged"/>
                                <Label Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding ElementName=slider2,Path=Value}" BorderThickness="1" BorderBrush="#7F7F7F" Margin="2"/>
                            </Grid>
                            <Grid x:Name="Grid3"  Visibility="Visible">
                                <Grid.ColumnDefinitions >
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="内半径" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Slider Grid.Column="1" x:Name="slider3" VerticalAlignment="Center" Minimum="0" Maximum="15" IsSnapToTickEnabled="True" Value="9" TickFrequency="1" ValueChanged="Slider_ValueChanged"></Slider>
                                <Label Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding ElementName=slider3,Path=Value}" BorderThickness="1" BorderBrush="#7F7F7F" Margin="2"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel>
                        <DockPanel>
                            <Path Margin="5,2,5,2" Height="15" Stretch="Fill" Width="16"  Fill="Azure" Data="M535.466667 812.8l450.133333-563.2c14.933333-19.2 2.133333-49.066667-23.466667-49.066667H61.866667c-25.6 0-38.4 29.866667-23.466667 49.066667l450.133333 563.2c12.8 14.933333 34.133333 14.933333 46.933334 0z" />
                            <Label Content="位移台控制"  FontSize="20" />
                        </DockPanel>
                        <Grid Margin="15,0,0,0">
                            <Image Source="images\xy-direction1.png" Stretch="Uniform" Height="150" Width="150"  HorizontalAlignment="Left" Margin="15,0"/>
                            <Image Source="images\z-direction.png" Stretch="Uniform" Height="150" Width="50"  HorizontalAlignment="Right" Margin="15,0" />
                        </Grid>
                        <StackPanel Margin="45,0,0,0">
                            <Label  Content="XY轴步长:400um"/>
                            <Label  Content="Z轴步长L:8um"/>
                            <Label  Content="XY轴步长:1000um"/>

                        </StackPanel>
                    </StackPanel>
                    <StackPanel>
                        <DockPanel>
                            <Path Margin="5,2,5,2" Height="15" Stretch="Fill" Width="16"  Fill="Azure" Data="M535.466667 812.8l450.133333-563.2c14.933333-19.2 2.133333-49.066667-23.466667-49.066667H61.866667c-25.6 0-38.4 29.866667-23.466667 49.066667l450.133333 563.2c12.8 14.933333 34.133333 14.933333 46.933334 0z" />
                            <Label Content="区域选择"  FontSize="20" />
                        </DockPanel>
                        <Canvas x:Name="Canvas1" Height="200" Width="200"  >
                            <Ellipse x:Name="CricalBase"  Canvas.Top="0" Width="200" Height="200"  Fill="#7F7F7F"/>
                            <Line x:Name="Line1" Stroke="#595959" StrokeThickness="1" X1="0" Y1="100" X2="200" Y2="100"/>
                            <Line Stroke="#595959" StrokeThickness="1" X1="100" Y1="0" X2="100" Y2="200"/>
                        </Canvas>
                    </StackPanel>

                    <StackPanel>
                        <DockPanel>
                            <Path Margin="5,2,5,2" Height="15" Stretch="Fill" Width="16"  Fill="Azure" Data="M535.466667 812.8l450.133333-563.2c14.933333-19.2 2.133333-49.066667-23.466667-49.066667H61.866667c-25.6 0-38.4 29.866667-23.466667 49.066667l450.133333 563.2c12.8 14.933333 34.133333 14.933333 46.933334 0z" />
                            <Label Content="景深融合"  FontSize="20" />
                        </DockPanel>

                        <Grid Margin="15,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*"/>
                                <ColumnDefinition Width="53*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton Grid.Row="0" VerticalAlignment="Center" Checked="RadioButton_Click" Tag="0x01" Margin="15,0" />
                            <Label Grid.Row="0" Grid.Column="1" Content="不融合"/>
                            <RadioButton Grid.Row="1" VerticalAlignment="Center" Checked="RadioButton_Click" Tag="0x02"  Margin="15,0"/>
                            <DockPanel  Grid.Row="1" Grid.Column="1" >
                                <Label Content="层数："/>
                                <TextBox Text="10" Background="Transparent" Foreground="White" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="#7F7F7F" />
                                <Label Content="，层间距："/>
                                <TextBox Text="0.19" Background="Transparent" Foreground="White" VerticalContentAlignment="Center" BorderThickness="1" BorderBrush="#7F7F7F" />
                                <Label Content="um"/>
                            </DockPanel>
                        </Grid>
                        <Grid Margin="0,20,0,0">
                            <Button Content="拍照" Template="{DynamicResource ButtonTemplate1}"  Width="80" Height="25" BorderBrush="#BFBFBF" Background="#A6A6A6" Margin="-100,0,0,0"/>
                            <Button Content="录像" Template="{DynamicResource ButtonTemplate1}"  Width="80" Height="25" BorderBrush="#BFBFBF" Background="#A6A6A6" Margin="100,0,0,0"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel>
                        <DockPanel>
                            <Path Margin="5,2,5,2" Height="15" Stretch="Fill" Width="16"  Fill="Azure" Data="M535.466667 812.8l450.133333-563.2c14.933333-19.2 2.133333-49.066667-23.466667-49.066667H61.866667c-25.6 0-38.4 29.866667-23.466667 49.066667l450.133333 563.2c12.8 14.933333 34.133333 14.933333 46.933334 0z" />
                            <Label Content="多维拍照"  FontSize="20" />
                        </DockPanel>
                        <StackPanel Margin="15,0,0,0">
                            <DockPanel>
                                <Path Margin="5,2,5,2" Height="15" Stretch="Fill" Width="16"  Fill="Azure" Data="M535.466667 812.8l450.133333-563.2c14.933333-19.2 2.133333-49.066667-23.466667-49.066667H61.866667c-25.6 0-38.4 29.866667-23.466667 49.066667l450.133333 563.2c12.8 14.933333 34.133333 14.933333 46.933334 0z" />
                                <Label Content="模式选择"  FontSize="15" />
                            </DockPanel>
                            <DockPanel Margin="15,0,0,0">
                                <CheckBox IsChecked="True" Content="明场" Foreground="White"/>
                                <CheckBox IsChecked="True" Content="暗场" Foreground="White"/>
                                <CheckBox IsChecked="True" Content="相衬" Foreground="White"/>
                                <CheckBox IsChecked="True" Content="浮雕" Foreground="White"/>
                            </DockPanel>
                        </StackPanel>
                        <StackPanel Margin="15,0,0,0">
                            <DockPanel>
                                <Path Margin="5,2,5,2" Height="15" Stretch="Fill" Width="16"  Fill="Azure" Data="M535.466667 812.8l450.133333-563.2c14.933333-19.2 2.133333-49.066667-23.466667-49.066667H61.866667c-25.6 0-38.4 29.866667-23.466667 49.066667l450.133333 563.2c12.8 14.933333 34.133333 14.933333 46.933334 0z" />
                                <Label Content="聚焦模式"  FontSize="15" />
                            </DockPanel>
                            <StackPanel Margin="15,0,0,0">
                                <RadioButton Content="不聚焦" Foreground="White"/>
                                <RadioButton Content="间隔聚焦" Foreground="White"/>
                                <RadioButton Content="全聚焦" Foreground="White"/>
                            </StackPanel>
   
                        </StackPanel>
                        <StackPanel Margin="15,0,0,0">
                            <DockPanel>
                                <Path Margin="5,2,5,2" Height="15" Stretch="Fill" Width="16"  Fill="Azure" Data="M535.466667 812.8l450.133333-563.2c14.933333-19.2 2.133333-49.066667-23.466667-49.066667H61.866667c-25.6 0-38.4 29.866667-23.466667 49.066667l450.133333 563.2c12.8 14.933333 34.133333 14.933333 46.933334 0z" />
                                <Label Content="时间序列"  FontSize="15" />
                            </DockPanel>
                            <StackPanel Margin="15,0,0,0">
                                <CheckBox IsChecked="True" Content="明场" Foreground="White"/>
                                <Label Content="采集间隔："/>
                                <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="7*"/>
                                        <ColumnDefinition Width="53*"/>
                                    </Grid.ColumnDefinitions>
                                    <RadioButton Grid.Row="0" VerticalAlignment="Center" />
                                    <DockPanel  Grid.Row="0" Grid.Column="1" >
                                        <Label Content="时"/>
                                        <Label Content="10" BorderThickness="1" BorderBrush="#7F7F7F" />
                                        <Label Content="分"/>
                                        <Label Content="60" BorderThickness="1" BorderBrush="#7F7F7F" />
                                        <Label Content="秒"/>
                                    </DockPanel>
                                    <RadioButton Grid.Row="1" VerticalAlignment="Center"/>
                                    <Label Grid.Row="1"  Grid.Column="1" Content="最快速度"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Margin="15,0,0,0">
                                <CheckBox IsChecked="True" Content="明场" Foreground="White"/>
                                <Label Content="采集间隔："/>
                                <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="7*"/>
                                        <ColumnDefinition Width="53*"/>
                                    </Grid.ColumnDefinitions>
                                    <RadioButton Grid.Row="0" VerticalAlignment="Center" />
                                    <DockPanel  Grid.Row="0" Grid.Column="1" >
                                        <Label Content="时"/>
                                        <Label Content="10" BorderThickness="1" BorderBrush="#7F7F7F" />
                                        <Label Content="分"/>
                                        <Label Content="60" BorderThickness="1" BorderBrush="#7F7F7F" />
                                        <Label Content="秒"/>
                                    </DockPanel>
                                    <RadioButton Grid.Row="1" VerticalAlignment="Center"/>
                                    <Label Grid.Row="1"  Grid.Column="1" Content="不限时长"/>
                                </Grid>
                                <Grid Margin="0,20,0,0">
                                    <Button Content="执行" Template="{DynamicResource ButtonTemplate1}"  Width="80" Height="25" BorderBrush="#BFBFBF" Background="#A6A6A6" Margin="-100,0,0,0"/>
                                    <Button Content="停止" Template="{DynamicResource ButtonTemplate1}"  Width="80" Height="25" BorderBrush="#BFBFBF" Background="#A6A6A6" Margin="100,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>




                </StackPanel>
            </ScrollViewer>

        </Border>

    </Grid>
</Window>
