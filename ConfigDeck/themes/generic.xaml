<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:ConfigDeck">
  <Style x:Key="{x:Type local:BaseDeck}" TargetType="{x:Type local:BaseDeck}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:BaseDeck}">
          <Viewbox Margin="2">
            <StackPanel Orientation="Horizontal">
              <StackPanel VerticalAlignment="Center" Margin="10 0">
                <TextBlock>平</TextBlock>
                <TextBlock>台</TextBlock>
                <TextBlock>控</TextBlock>
                <TextBlock>制</TextBlock>
              </StackPanel>
              <Image Source="/ConfigDeck;component/Themes/XY-direction.png" Margin="10 0" />
              <Image Source="/ConfigDeck;component/Themes/Z-direction.png" Margin="10 0" />
            </StackPanel>
          </Viewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>