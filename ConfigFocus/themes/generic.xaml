<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:ConfigFocus">
  <Style x:Key="{x:Type local:FocusMode}" TargetType="{x:Type local:FocusMode}">
        <Setter Property="Margin" Value="-1"/>
        <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:FocusMode}">
                    <Viewbox Margin="2">
                        <GroupBox Header="聚焦模式" Margin="2" Background="#EEEEF2">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="不聚焦" Margin="5 0" Width="150" />
                                <Button Content="每N个" Margin="5 0" Width="150" />
                            </StackPanel>
                        </GroupBox>
                    </Viewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>