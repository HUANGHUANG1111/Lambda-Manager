<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:ConfigObjective">
  <Style x:Key="{x:Type local:Magnification}" TargetType="{x:Type local:Magnification}">
        <Setter Property="Margin" Value="-1"/>
        <Setter Property="IsTabStop" Value="False" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:Magnification}">
          <Viewbox Margin="2">
            <StackPanel>
              <TextBlock Text="相机控制" Margin="2" HorizontalAlignment="Center" />
              <StackPanel Orientation="Horizontal">
                <ToggleButton Name="Button1" Content="打开相机" Margin="5 0" Width="70" />
                <ToggleButton Name="Button2" Content="10X" Margin="5 0" Width="70"  Visibility="Hidden"/>
                <ToggleButton Name="Button3" Content="20X" Margin="5 0" Width="70" Visibility="Hidden" />
                <ToggleButton Name="Button4" Content="40X" Margin="5 0" Width="70" Visibility="Hidden" />
              </StackPanel>
            </StackPanel>
          </Viewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>