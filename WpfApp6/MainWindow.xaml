<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Initialized="Window_Initialized">
    <Grid>
        <StackPanel x:Name="MouseMoveStackPanel">
            <TextBlock >
                <Run Text="X:"/>
                <Run Text="{Binding X}"/>
            </TextBlock>
            <TextBlock >
                <Run Text="Y:"/>
                <Run Text="{Binding Y}"/>
            </TextBlock>
        </StackPanel>
        <Canvas x:Name="canvas1" Height="300" Width="300" Background="Transparent" MouseLeftButtonDown="canvas1_MouseLeftButtonDown" MouseMove="canvas1_MouseMove" MouseLeftButtonUp="canvas1_MouseLeftButtonUp"  MouseRightButtonDown="canvas1_MouseRightButtonDown" MouseRightButtonUp="canvas1_MouseRightButtonUp" Initialized="canvas1_Initialized" PreviewMouseDown ="Canvas1_PreviewMouseDown">
            <Grid x:Name="ShowGrid"  Height="300" Width="300">
               
            </Grid>
            <Ellipse Height="300" Width="300"  Stroke="Black"/>

        </Canvas>

    </Grid>
</Window>
