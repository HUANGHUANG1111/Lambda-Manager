            </Grid>
            <Border Grid.Row="1" BorderThickness="5" BorderBrush="#595959" Margin="-2,-2,-2,-2" CornerRadius="0,0,5,5">
                <Grid  Height="25" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <range:RangeSlider Grid.Column="1" LowerValue="{Binding RangeMin}"  HigherValue="{Binding RangeMax}" Margin="-13,0,-13,0" Name="RangeSlider"  Height="30"  Minimum="0" Maximum="255"  Orientation="Horizontal" SlidBackground="{StaticResource GRAY}" VerticalAlignment="Bottom" LowerValueChanged="RangeSlider_LowerValueChanged" HigherValueChanged="RangeSlider_HigherValueChanged"  ></range:RangeSlider>
                </Grid>
            </Border>
            <Border Grid.Row="2" BorderThickness="5" BorderBrush="#595959" Margin="-2,-2,-2,-2" CornerRadius="0,0,5,5">
                <Grid  Height="25" Margin="0,-5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="30"></ColumnDefinition>
                        
                    </Grid.ColumnDefinitions>
                    <TextBlock Width="25" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White"  Grid.Column="0" Text="{Binding ElementName=RangeSlider,Path=LowerValue,StringFormat=N0}"  ></TextBlock>

                    <TextBlock Width="25" VerticalAlignment="Center" Foreground="White" Grid.Column="6" Text="{Binding ElementName=RangeSlider,Path=HigherValue,StringFormat=N0}" FlowDirection="RightToLeft" ></TextBlock>
                    <StackPanel Grid.Column="1"
                                 Margin="0"  Orientation="Horizontal" HorizontalAlignment="Left">
                        <Label Grid.Row="0"  Content="最小值:" Foreground="White" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" ></Label>
                        <TextBlock  Grid.Row="0"  Text="{Binding Min}" VerticalAlignment="Center" Width="50" Foreground="White"  ></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="0"  Orientation="Horizontal" HorizontalAlignment="Left">
                        <Label Content="最大值:" Foreground="White" HorizontalAlignment="Left" Margin="0,0,0,0"   VerticalAlignment="Center" ></Label>
                        <TextBlock  Text="{Binding Max}" VerticalAlignment="Center" Width="50" Foreground="White"  ></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="3" Margin="0"  Orientation="Horizontal" HorizontalAlignment="Left">
                        <Label  Content="平均值:" Foreground="White" HorizontalAlignment="Left" Margin="0,0,0,0"  VerticalAlignment="Center"  ></Label>
                        <TextBlock  Text="{Binding Mean}" VerticalAlignment="Center" Width="50" Foreground="White"  ></TextBlock>
                    </StackPanel>

                    <StackPanel  Grid.Column="4" Margin="0"  Orientation="Horizontal" HorizontalAlignment="Left" >
                        <Label  Content="方差： " Foreground="White" HorizontalAlignment="Left" Margin="0,0,0,0"   VerticalAlignment="Center" ></Label>
                        <TextBlock Text="{Binding Variance}" VerticalAlignment="Center" Width="50" Foreground="White"  ></TextBlock>
                    </StackPanel>

                    <StackPanel  Grid.Column="5" Margin="0"  Orientation="Horizontal" HorizontalAlignment="Left">
                        <Label  Content="离群率：" Foreground="White" HorizontalAlignment="Left" Margin="0,0,0,0"   VerticalAlignment="Center" ></Label>
                        <TextBlock  Text="{Binding Outlier}" VerticalAlignment="Center" Width="50" Foreground="White"></TextBlock>
                    </StackPanel>





                </Grid>
            </Border>



        </Grid>
    </Border>


</UserControl>
