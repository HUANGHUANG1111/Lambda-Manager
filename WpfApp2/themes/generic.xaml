<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:WpfApp2">


    <Style x:Key="{x:Type local:UpDownButton}" TargetType="{x:Type local:UpDownButton}">
        <Setter Property="Margin" Value="-1"/>
        <Setter Property="Template">
            
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:UpDownButton}">
                    <DockPanel DockPanel.Dock="Top" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Visibility ="Visible">
                        <DockPanel Width="20" Height="26" DockPanel.Dock="Right">
                            <Button x:Name="btn_ClickUp" DockPanel.Dock="Top" FontFamily="Marlett" Content="5" Height="13" />
                            <Button x:Name="btn_ClickDown" DockPanel.Dock="Bottom" FontFamily="Marlett" Content="6"  Width="20" />
                        </DockPanel>
                        <DockPanel>
                            <TextBox x:Name="txt_NamberChange"  Height="26" Width="85" Text="5.059" VerticalContentAlignment="Center"/>
                        </DockPanel>
                    </DockPanel>

                </ControlTemplate>
            </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>