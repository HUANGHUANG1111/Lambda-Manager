<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="LambdaManager.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:sys="clr-namespace:System;assembly=System.Runtime" Icon="/Resources/Images/StartImage/7.png" Title="λManager" Height="1080" Width="1920" xmlns:lambdamanager="clr-namespace:LambdaManager;assembly=LambdaManager" xmlns:system1="clr-namespace:System;assembly=netstandard" Loaded="Window_Loaded" Closing="Window_Closing" ContentRendered="Window_ContentRendered" >
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <Style x:Key="imageButtom" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}" />
        <Setter Property="TextBlock.Padding" Value="5,5,5,5" />
      </Style>
      <Style x:Key="msgBlock" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="5, 0, 0, 0" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="MaxWidth" Value="800" />
      </Style>
      <Style x:Key="comBox" TargetType="{x:Type ComboBoxItem}">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <DockPanel>
    <Menu Name="menu" DockPanel.Dock="Top" Padding="0,5,0,5">
      <MenuItem Name="file" Header="文件" />
      <MenuItem Name="collect" Header="采集" />
      <MenuItem Name="analyze" Header="分析" />
      <MenuItem Name="setting" Header="设置" />
      <MenuItem Name="help" Header="帮助" />
    </Menu>
    <StatusBar Name="statusBar" DockPanel.Dock="Bottom">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="40" />
              <ColumnDefinition Width="40" />
              <ColumnDefinition Width="40" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="80" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
          </Grid>
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      <StatusBarItem>
        <TextBlock Name="stateX">X:</TextBlock>
      </StatusBarItem>
      <StatusBarItem Grid.Column="1">
        <TextBlock Name="stateY">Y:</TextBlock>
      </StatusBarItem>
      <StatusBarItem Grid.Column="2">
        <TextBlock Name="stateZ">Z:</TextBlock>
      </StatusBarItem>
      <Separator Grid.Column="3" />
      <StatusBarItem Grid.Column="4">
        <TextBlock Name="cameraState" Text="{DynamicResource CameraClosed}" />
      </StatusBarItem>
      <Separator Grid.Column="5" />
      <StatusBarItem Grid.Column="6">
        <TextBlock Name="lightState">光源: 关闭</TextBlock>
      </StatusBarItem>
      <Separator Grid.Column="7" />
      <StatusBarItem Name="status8" Grid.Column="8">
        <ComboBox Name="msgList" SelectedIndex="0" BorderThickness="0,0,0,0">
          <ComboBoxItem>
            <StackPanel Orientation="Horizontal">
              <Image Source="{StaticResource INFO}" Width="12" Height="12" />
              <TextBlock VerticalAlignment="Center" Margin="5,0,0,0">无消息</TextBlock>
            </StackPanel>
          </ComboBoxItem>
        </ComboBox>
      </StatusBarItem>
    </StatusBar>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="auto" />
      </Grid.ColumnDefinitions>
      <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" CanContentScroll="True">
        <FrameworkElement.Resources>
          <ResourceDictionary>
            <!--<system1:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}" xmlns:system="clr-namespace:System;assembly=System.Private.CoreLib">10</system1:Double>-->
          </ResourceDictionary>
        </FrameworkElement.Resources>
        <Viewbox Grid.Column="0" VerticalAlignment="Top">
          <StackPanel Name="leftView" Width="300" Margin="0,5,0,5">
                    </StackPanel>
        </Viewbox>
      </ScrollViewer>
      <GridSplitter Grid.Column="1" HorizontalAlignment="Center" Width="3" Background="#FFADD8E6" />
      <Grid Name="mainView" Column="2" Background="#FF5D5D5D">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="auto" />
          <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
          <Image Name="view0" Source="/Resources/Images/StartPicture1.png" Stretch="Uniform" />
          <StackPanel Name="ruler" VerticalAlignment="Bottom" Margin="0,0,20,20" HorizontalAlignment="Right">
            <TextBlock Foreground="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}" HorizontalAlignment="Center" Text="{DynamicResource Unit}" />
            <Path StrokeThickness="1" Stroke="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
              <Path.Data>
                <PathGeometry Figures="m 0,0 v 5 h 50 v -5" />
              </Path.Data>
            </Path>
          </StackPanel>
        </Grid>
        <GridSplitter Grid.Row="1" VerticalAlignment="Stretch" Height="3" Background="#FFADD8E6" />
        <StackPanel Name="bottomView" Orientation="Horizontal" />
      </Grid>
      <GridSplitter Grid.Column="3" HorizontalAlignment="Center" Width="3" Background="#FFADD8E6" />
      <ScrollViewer Grid.Column="4" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Name="rightView" DockPanel.Dock="Right">
          <TextBlock Foreground="White">Workspace 1</TextBlock>
                    <TextBlock Foreground="White">Workspace 2</TextBlock>
        </StackPanel>
      </ScrollViewer>
    </Grid>
  </DockPanel>
</Window>