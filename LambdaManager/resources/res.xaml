<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <BitmapImage x:Key="DEBUG" UriSource="Icons/Severity/debug16.png" />
  <BitmapImage x:Key="INFO" UriSource="Icons/Severity/info16.png" />
  <BitmapImage x:Key="WARNING" UriSource="Icons/Severity/warning16.png" />
  <BitmapImage x:Key="ERROR" UriSource="Icons/Severity/error16.png" />
  <BitmapImage x:Key="FATAL_ERROR" UriSource="Icons/Severity/fatal16.png" />
  <Style x:Key="styleBackground">
    <Setter Property="Control.Background">
      <Setter.Value>
        <ImageBrush ImageSource="/Resources/Images/backgroud.png" />
      </Setter.Value>
    </Setter>
  </Style>
  <Style x:Key="styleBanner">
    <Setter Property="Panel.Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0.25" EndPoint="1,0.5">
                    <GradientStop Color="#CC0088DD" Offset="0.3" />
                    <GradientStop Color="#3300FFFF" Offset="0.85" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    <Setter Property="TextBlock.Foreground" Value="#FFFFFF00" />
    <Setter Property="TextBlock.FontFamily" Value="Comic Sans MS" />
  </Style>
</ResourceDictionary>