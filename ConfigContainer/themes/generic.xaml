<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:ConfigContainer">
  <Style x:Key="{x:Type local:SampleContainer}" TargetType="{x:Type local:SampleContainer}">
        <Setter Property="Margin" Value="-1"/>

        <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:SampleContainer}">
          <Viewbox Margin="2">
            <GroupBox Header="适配器选择" Margin="2" Background="#EEEEF2">
              <StackPanel Orientation="Horizontal">
                <Button Content="玻片" Width="150" Margin="5 0" />
                <Button Content="培养皿" Width="150" Margin="5 0" />
              </StackPanel>
            </GroupBox>
          </Viewbox>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>